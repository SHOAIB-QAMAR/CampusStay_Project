<% layout("layout/boilerplate") -%>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-warning">
                <i class="fas fa-comments me-2"></i>Manage Reviews
            </h1>
            <a href="/admin/dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>

        <% if (reviews.length> 0) { %>
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">All Reviews (<%= reviews.length %>)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Review Content</th>
                                    <th>Rating</th>
                                    <th>Author</th>
                                    <th>Listing</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% reviews.forEach(review=> { %>
                                    <tr>
                                        <td>
                                            <div style="max-width: 300px;">
                                                <strong class="d-block">Comment:</strong>
                                                <small class="text-muted">
                                                    <%= review.comment ? review.comment.substring(0, 100) +
                                                        (review.comment.length> 100 ? '...' : '') : 'No comment' %>
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">
                                                <i class="fas fa-star me-1"></i>
                                                <%= review.rating %>
                                            </span>
                                        </td>
                                        <td>
                                            <small>
                                                <%= review.author.username %>
                                            </small>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= review.listing ? review.listing.title : 'Listing Deleted' %>
                                            </small>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= review.createdAt ? new Date(review.createdAt).toLocaleDateString()
                                                    : 'N/A' %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <form action="/admin/reviews/<%= review._id %>?_method=DELETE"
                                                    method="POST" class="d-inline"
                                                    onsubmit="return confirm('Are you sure you want to delete this review?')">
                                                    <button type="submit" class="btn btn-outline-danger"
                                                        title="Delete Review">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <% } else { %>
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>No reviews found
                </div>
                <% } %>
    </div>